<%= header %>
<div class="content-block">
  <form action="search" method="get">
    <div class="list-block">
      <ul>
        <li>
        <div class="item-content">
          <div class="item-inner">
            <div class="item-title label">駅名</div>
            <div class="item-input">
              <input type="text" placeholder="例) 渋谷" class="station" name="s" autocomplete="off">
            </div>
          </div>
        </div>
        </li>
        <div class="suggest"></div>
        <li>
        <div class="item-content">
          <div class="item-inner">
            <div class="item-title label">科目</div>
            <div class="item-input">
              <select class="department" name="d">
                <option>内科</option>
                <option>歯科</option>
                <option>眼科</option>
                <option>耳鼻科</option>
                <option>皮膚科</option>
                <option>外科</option>
                <option>整形外科</option>
                <option>泌尿器科</option>
                <option>小児科</option>
                <option>産婦人科</option>
                <option>精神科</option>
                <option>総合病院</option>
              </select>
            </div>
          </div>
        </div>
        </li>
      </ul>
      <input class="search" type="submit" value="検索">
    </div>
  </form>
  <div class="seo">
    <%= link_to "駅名から探す", :stations_top %>
  </div>
</div>
<%= footer %>
